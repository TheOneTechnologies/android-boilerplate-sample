<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background = "#80000000"
        android:gravity = "center|bottom"
        android:orientation = "vertical">


    <androidx.cardview.widget.CardView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "10dp"
            app:cardCornerRadius = "4dp">

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id = "@+id/text_title"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "@dimen/_5sdp"
                    android:layout_marginBottom = "@dimen/_5sdp"
                    android:gravity = "center"
                    android:padding = "@dimen/_8sdp"
                    android:text = "@string/str_select_action"
                    android:textSize = "@dimen/_12sdp"
                    android:textStyle="bold"
                  />

            <View
                    android:layout_width = "match_parent"
                    android:layout_height = "1dp"
                    android:background = "@color/colorGray" />

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/styleFontMedium"
                    android:id = "@+id/text_photo_from_camera"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "@dimen/_5sdp"
                    android:layout_marginBottom = "@dimen/_5sdp"
                    android:gravity = "center"
                    android:padding = "@dimen/_8sdp"
                    android:textStyle="bold"
                    android:text = "@string/str_photo_from_camera"
                    android:textColor = "@color/colorPrimary"
                    android:textSize = "@dimen/_12sdp"
                   />

            <View
                    android:layout_width = "match_parent"
                    android:layout_height = "1dp"
                    android:background = "@color/colorGray" />

             <androidx.appcompat.widget.AppCompatTextView
                     style="@style/styleFontMedium"
                     android:id = "@+id/text_photo_from_gallery"
                     android:layout_width = "match_parent"
                     android:layout_height = "wrap_content"
                     android:layout_marginTop = "@dimen/_5sdp"
                     android:layout_marginBottom = "@dimen/_5sdp"
                     android:gravity = "center"
                     android:padding = "@dimen/_8sdp"
                     android:textStyle="bold"
                     android:text = "@string/str_photo_from_gallery"
                     android:textColor = "@color/colorPrimary"
                     android:textSize = "@dimen/_12sdp"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_marginBottom = "10dp"
            app:cardCornerRadius = "4dp">

          <androidx.appcompat.widget.AppCompatTextView
                  android:id = "@+id/text_cancel"
                  android:layout_width = "match_parent"
                  android:layout_height = "wrap_content"
                  android:layout_marginTop = "@dimen/_5sdp"
                  android:layout_marginBottom = "@dimen/_5sdp"
                  android:gravity = "center"
                  android:padding = "@dimen/_8sdp"
                  android:textStyle="bold"
                  android:text = "@string/str_cancel"
                  style="@style/styleFontMedium"
                  android:textColor = "@color/colorPrimary"
                  android:textSize = "@dimen/_12sdp"
                 />
    </androidx.cardview.widget.CardView>

</LinearLayout>
